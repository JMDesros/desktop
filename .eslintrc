{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:mocha/recommended",
    "semistandard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "no-throw-literal": 0,
    "no-console": "off",
    "semi": 1,
    "quotes": ["error", "single"]
  },
  "plugins": ["@typescript-eslint", "mocha"],
  "globals": {
    "angular": true,
    "ElectronValence": true,
    "zip": true
  },
  "env": {
    "mocha": true
  }
}
